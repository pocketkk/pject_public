<% title "Chemicals" %>

<table>
  <tr>
    <th>Name</th>
    <th>Quantity</th>
    <th>Asset</th>
  </tr>
  <% for chemical in @chemicals %>
    <tr>
      <td><%= chemical.name %></td>
      <td><%= chemical.quantity %></td>
      <td><%= chemical.asset_id %></td>
      <td><%= link_to "Show", chemical %></td>
      <td><%= link_to "Edit", edit_chemical_path(chemical) %></td>
      <td><%= link_to "Destroy", chemical, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Chemical", new_chemical_path %></p>
