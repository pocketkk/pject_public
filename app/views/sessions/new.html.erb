<% provide(:title, "Sign in") %>
<div class="signin_page_wrapper">
	<h1>Sign in</h1>
	<div class="row signin_page">

    		<%= form_for(:session, url: sessions_path) do |f| %>

      			<%= f.label :email %>
      			<%= f.text_field :email %>

      			<%= f.label :password %>
      			<%= f.password_field :password %>

				<br />
      			<center><%= f.submit "Sign in", class: "btn btn-large btn-primary" %></center>
    		<% end %>

    		<center><p>New user? <%= link_to "Sign up now!", signup_path %></p></center>

	</div>
</div>