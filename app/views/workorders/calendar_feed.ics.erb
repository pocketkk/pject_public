BEGIN:VCALENDAR
VERSION:2.0\r\n
METHOD:PUBLISH\r\n
PRODID:-//Workorder Machine//EN\r\n
X-WR-CALNAME:Workorder Machine\r\n
CALSCALE:GERGORIAN\r\n
<% @workorders.each do |workorder| %>
BEGIN:VEVENT
DTSTAMP:<%=Time.now.strftime("%Y%m%dT%H%M%SZ")%>\r\n
UID:<%=workorder.id%>\r\n
SUMMARY:<%= workorder.customer.titleize %> - <%= workorder.wo_type.titleize %>\r\n
DTSTART:<%= workorder.wo_date.strftime("%Y%m%dT%H%M%S") %>\r\n
<% endtime=workorder.wo_date+workorder.wo_duration.hours %>
DTEND:<%= endtime.strftime("%Y%m%dT%H%M%S") %>\r\n
LOCATION: <%= workorder.street.titleize %>\, <%= workorder.city.titleize %>\, <%=workorder.state.upcase%>\r\n
URL:http://www.workordermachine.com/workorders/<%=workorder.id%>\r\n
END:VEVENT
<% end %>
END:VCALENDAR
