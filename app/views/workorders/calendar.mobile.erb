</div>
<div class="cal-date-contents">
	<ul class="ul-cal-date">
		<li class="li-cal-date"><%= @date.strftime("%B %d, %Y") %></li>
		<br />
		<% @users.each do |user| %>
				<% user.day_offs.each do |day_off| %>
				<% if @date <= day_off.end_date && @date >= day_off.start_date %>
					<li class="li-cal-dayoff">
					<% if current_user.role=="Branch Manager" || current_user.role=="Regional Manager" %> Time Off:
					<%=link_to day_off.user.name, edit_day_off_path(day_off)%> |
					<% else %>
						<%=day_off.user.name%> |
					<% end %>
					<% if day_off.approved? %>
						<%=day_off.do_type%>
					<% else %>
						Pending
					<% end %>
				</li>
				<hr />
				<% end %>
			<% end %>
		<% end %>

		<% if @workorders_by_date[@date] %>
      		<% @workorders_by_date[@date].each do |workorder| %>
				<li class="li-cal-workorder">
      				<%= link_to workorder.wo_date.strftime("%I:%M %p"), edit_workorder_path(workorder), id: "change_datetime_#{workorder.id}", remote: true %> - <%= link_to workorder.customer.titleize, workorder %>
				</li>
				<li class="li-cal-workorder-2">
					<%=workorder.wo_type.titleize%>
				</li>
				<li class="li-cal-workorder-2">
					<% if workorder.assets.any? %>
						Equipment:
						<% workorder.assets.each do |asset| %>
							| <%=asset.name%> |
						<% end %>
					<% end %>
				</li>
				<li class="li-cal-workorder-2">
						Assigned to: <%= workorder.assigned_to ? name_of_user(workorder.assigned_to) : ""%>
				</li>
				<hr />
			<% end %>
		<% end %>

	</ul>
</div>
















