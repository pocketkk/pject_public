BEGIN:VCALENDAR
VERSION:2.0
METHOD:PUBLISH
PRODID:-//Workorder Machine/Time-Off//EN
X-WR-CALNAME:Workorder Machine
CALSCALE:GERGORIAN
<% @users.each do |user| %>
<% user.day_offs.each do |day_off| %>
BEGIN:VEVENT
DTSTAMP:<%=Time.now.strftime("%Y%m%dT%H%M%SZ\r\n")%>
UID:<%=day_off.id%>
SUMMARY:<%= day_off.user.name.titleize %> | <%= day_off.do_type << "\r\n"%>
DTSTART;VALUE=DATE:<%= day_off.start_date.strftime("%Y%m%d\r\n") %>
<% end_day=day_off.end_date + 1.day %>
DTEND;VALUE=DATE:<%= end_day.strftime("%Y%m%d\r\n") %>
END:VEVENT
<% end %>
<% end %>
END:VCALENDAR
