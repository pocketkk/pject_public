
<%= form_for @part do |f| %>
    <%= f.label :name, "Part Name" %>
    <%= f.text_field :name %>
    <%= f.label :part_number %>
    <%= f.text_field :part_number %>
    <%= f.label :qty %>
    <%= f.text_field :qty %>
    <%= f.label :po_number, "PO Number" %>
    <%= f.text_field :po_number %>
    <%= f.label :comment %>
    <%= f.text_area :comment, :size=>"20x2" %>
	<%= f.label :ordered, "Ordered?"%>
	<%= f.select :ordered, { "No" => false, "Yes" => true}%>
    <%= f.label :branch %>
    <%= f.select :branch, Workorder::BRANCH_OPTIONS, :selected => current_user.current_branch %>
	<center>
	   <%= f.submit "Add Part", class: "btn btn-large btn-primary" %>
    </center>
<% end %>
