
<table>
  <tr>
    <th>Feed Item</th>
  </tr>
  <% for update in @updates %>
    <tr>
      <td><%= update.feed_item %></td>
      <td><%= link_to "Show", update %></td>
      <td><%= link_to "Edit", edit_update_path(update) %></td>
      <td><%= link_to "Destroy", update, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Update", new_update_path %></p>
